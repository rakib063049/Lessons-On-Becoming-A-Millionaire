<div class="maincontent">
  <div class="dashboard">
    <div class="cnt-nav">
      <ul>
        <li><a href="#" class="active"> All Subjects</a></li>
        <li>&gt;&gt;</li>
        <li class="no_bg"><a href="#"> Fashion</a></li>
      </ul>
      <div class="clear"> </div>
    </div>

    <div class="marketing">
      <h1>Welcome back, Travis! </h1>
      <h6>Pick up where you left off with <a href="#">Marketing for a Clothing Line</a></h6>
      <div class="cnt-marketing">
        <img src="/assets/marketing-video.jpg" width="197" height="111" alt="video">
        <p> Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.
          Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo...   <a href="#">View Lesson &gt;&gt;</a></p>
        <div class="clear"> </div>
      </div>
    </div>

    <div class="subjects-like">
      <div class="subjects">
        <h6>Subjects  </h6>
        <ul>
          <% @categories.each do |subject| %>
            <li><%= link_to "#{subject.title} <span>(#{subject.lessons.count})</span>".html_safe, subject %></li>
          <% end %>

        </ul>


        <h6>Instructors </h6>
        <ul>
          <% @instructors.each do |instructor| %>
              <li><%= link_to "#{instructor.title} <span>(#{instructor.lessons.count})</span>".html_safe, instructor %></li>
          <% end %>

        </ul>
      </div>

      <div class="like-cnt">
        <div class="content-like">
          <h6>You May Like...</h6>
          <ul>
            <% @lessons.each do |lesson| %>
                <li>
                  <%= link_to "#{image_tag (lesson.photo.url(:small)), :width => '159', :height => '79', :alt => "video" }<span> #{lesson.title}".html_safe, lesson %>

                </li>
            <% end %>

          </ul>
          <div class="clear"> </div>
        </div>

        <div class="content-like">


          <h6>Newly Added</h6>
          <% @newest_lesson = @lessons.sort_by{|s| -s[:id]} %>
          <ul>
            <% @newest_lesson.each do |new_lesson| %>
              <li>
                <%= link_to "#{image_tag (new_lesson.photo.url(:small)), :width => '159', :height => '79', :alt => "video" }<span> #{new_lesson.title}".html_safe, new_lesson %>
              </li>
            <%end%>

          </ul>
          <div class="clear"> </div>

        </div>

        <div class="cnt-profile">
          <%@instructor.each do |instructor|%>
          <%= image_tag (instructor.photo.url(:small)), :width => '102px', :height => '142px'  %>
          <div class="profile-txt"> <h3><%= instructor.title %></h3>
            <h6 class="p1"><%= instructor.sub_title %><span></span></h6>
            <p class="p2"><%= instructor.summary %></p>
            <%= link_to 'View Videos by Daymond John ', instructor %>
          </div>
          <%end%>

          <div class="clear"></div>




        </div>


      </div>
      <div class="clear"> </div>
    </div>


  </div>
</div>