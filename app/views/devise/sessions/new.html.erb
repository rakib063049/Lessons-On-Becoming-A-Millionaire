

<div class="container2">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>


      <div class="member_login">
        <h2>Member Login </h2>
        <div class="clear"></div>
        <div class="form_div">
          <ul>
            <li><%= f.email_field :email, :placeholder => "Email", :class => "txt_box" %></li>
            <li><%= f.password_field :password, :placeholder => "password", :class => "password" %></li>
          </ul>
          <% if devise_mapping.rememberable? -%>
              <div><%= f.check_box :remember_me, :class => "chk_box" %> <%= f.label :remember_me %></div>
          <% end -%>

          <%= f.submit "LOGIN", :Class => "login" %>
          <div class="clear"></div>
        </div>
      </div>


  <% end %>

  <%= render "devise/shared/links" %>

</div>
