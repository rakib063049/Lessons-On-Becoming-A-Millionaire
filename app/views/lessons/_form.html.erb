<%= semantic_form_for [:admin, @lesson] do |f| %>
    <%= f.inputs do %>
        <%= f.input :title, :wrapper_html => {:style => 'width: 56%'} %>
        <%= f.input :vimeo_link, :wrapper_html => {:style => 'width: 56%'} %>
        <%= f.input :video_length, :wrapper_html => {:style => 'width: 56%'} %>
        <%= f.input :summary, :wrapper_html => {:style => 'width: 56%'} %>
        <%= f.input :action_steps, :wrapper_html => {:style => 'width: 56%'} %>
        <%= f.input :transcript, :wrapper_html => {:style => 'width: 56%'} %>
        <%= f.input :faq, :wrapper_html => {:style => 'width: 56%'} %>
        <%= f.input :subscription, :wrapper_html => {:style => 'width: 56%'} %>
    <% end %>

    <%= f.actions do %>
        <li class="cancel"><%= link_to 'Cancel', :back %></li>
        <%= f.action :submit %>
    <% end %>
<% end %>